  "compilerOptions": {
    "outDir": "./assets/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["src/types"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
