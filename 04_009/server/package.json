{
  "name": "basic-crud",
  "version": "0.0.1",
  "main": "src/app.ts",
  "author": "yoonminsang <apdlyooapdl@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development tsc-watch --onSuccess \"ts-node --files -r tsconfig-paths/register dist/server.js\" ",
    "prod:basic": "tsc && cross-env NODE_ENV=production ts-node --files -r tsconfig-paths/register dist/server.js",
    "prod": "tsc && cross-env NODE_ENV=production pm2 start --name api ts-node -- --files -r tsconfig-paths/register dist/server.js - i max",
    "lint": "eslint src --ext .ts --parser-options=project:'tsconfig.json'",
    "lint:fix": "eslint src --ext .ts --parser-options=project:'tsconfig.json' --fix",
    "test": "jest --config ./jest.config.ts",
    "test:clean": "jest --config ./jest.config.ts --silent",
    "test:coverage": "jest --config ./jest.config.ts --coverage --silent",
    "seed:dev": "tsc && cross-env NODE_ENV=development ts-node --files -r tsconfig-paths/register dist/seed/index.js",
    "seed:prod": "tsc && cross-env NODE_ENV=production ts-node --files -r tsconfig-paths/register dist/seed/index.js"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^14.3.2",
    "express": "^4.17.1",
    "joi": "^17.4.2",
    "morgan": "^1.10.0",
    "node-json-db": "^1.4.1",
    "node-mocks-http": "^1.11.0",
    "pm2": "^5.1.2",
    "ts-node": "^10.4.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.9.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "3.2.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  }
}
